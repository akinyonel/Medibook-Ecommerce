@using Medibook.Models
@using Medibook.Helpers
@model List<Book>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<!-- Page Content -->





<div class="container">

    <div class="row">

        @Html.Partial("_PartialCategoriesMainPage")
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="padding:30px">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/img/slider.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/img/slider2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/img/slider.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">

                @foreach (Book book in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="@Url.Action("BookDetail", "Home", new { id = book.Id, name = @Url.FriendlyURLTitle(book.Name) })"><img class="card-img-top" src="@book.ImageString" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("BookDetail", "Home", new { id = book.Id, name = @Url.FriendlyURLTitle(book.Name) })">@book.Name</a>
                                </h4>
                                <div class="row" style="background-color:pink">
                                    <div class="col-md-6">
                                        <h3>@book.Price ₺</h3>
                                    </div>
                                    <div class="col-md-6">
                                        <p style="float:right"><small>@book.Author</small></p>
                                    </div>
                                </div>
                               
                               
                                <p class="card-text">
                                    @if (book.Description.Length >= 70)
                                    {
                                        @Html.Raw(book.Description.Substring(0, 70))
                                        <text><b>...</b></text>
                                    }
                                    else
                                    {
                                        @Html.Raw(book.Description)
                                    }
                                </p>
                            </div>

                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                    </div>
                                    <div class="col-md-6">
                                        <div style="float:right">
                                            <button name="@book.Id" class="btn btn-primary btn-sm addToBasket" title="Sepete Ekle"><i class="fa fa-shopping-cart"></i></button>
                                        </div>
                                       
                                    </div>
                                </div>
                               
                               
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
