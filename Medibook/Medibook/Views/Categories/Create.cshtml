@model Medibook.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<!-- Sayfa İçeriği -->
<div class="row" style="padding:50px">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <article class="content dashboard-page">
            <!-- Başlık -->
            <div class="title-block">
                <h3 class="title">
                    Kategori Ekle
                    <span class="sparkline bar" data-type="bar"></span>
                </h3>
            </div>
            <!-- Başlık -->
            @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class=" ">
                        
                        <div class="form-group row">

                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 form-control-label text-xs-right" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control boxed" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                      

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary" style="float:right"> Kaydet </button>
                            </div>
                        </div>
                    </div>
                </form>
            }

        </article>

    </div>
    <div class="col-md-2"></div>
</div>
<!-- Sayfa İçeriği -->