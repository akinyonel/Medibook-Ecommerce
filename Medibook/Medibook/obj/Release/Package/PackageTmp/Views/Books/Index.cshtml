@model IEnumerable<Medibook.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<div class="row" style="padding:50px">



    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-8"> <h2>Kitap Listesi</h2></div>
            <div class="col-md-4">
                <a href="@Url.Action("Create","Books")" class="btn btn-primary btn-sm rounded-s" style="float:right"><i class="fa fa-plus"></i> Yeni Ekle </a>
            </div>
        </div>



        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">  @Html.DisplayNameFor(model => model.ImageString)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.Author)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.Publisher)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.Language)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.Price)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.Category.Name)</th>
                    <th scope="col"> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="img-thumbnail" style="width:100px" src="@Html.DisplayFor(modelItem => item.ImageString)" />
                        </td>
                        <td>   @Html.DisplayFor(modelItem => item.Name)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Author)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Publisher)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Language)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Price)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Category.Name)</td>
                        <td>


                            <a style="padding:10px" href="@Url.Action("Delete","Books",new { id = item.Id, name = item.Name})" onclick="return confirm('İçerik Silinecektir, Onaylıyor musunuz ?');">
                                <i class="fa fa-trash "></i>
                            </a>

                            <a style="padding:10px" href="@Url.Action("Edit","Books",new { id = item.Id, name = item.Name})">
                                <i class="fa fa-pencil-alt"></i>
                            </a>

                            <a style="padding:10px" href="@Url.Action("Details","Books",new { id = item.Id, name = item.Name})">
                                <i class="fa fa-search"></i>
                            </a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
    <div class="col-md-1"></div>
</div>



