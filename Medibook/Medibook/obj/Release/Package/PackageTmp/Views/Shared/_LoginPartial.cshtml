@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        

        <li class="profile dropdown nav-item active">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="name">@User.Identity.GetUserName() </span>
            </a>
            <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">


                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <p class="dropdown-item" style="background-color:pink">
                        <i class="fa fa-user-shield"></i> Admin
                    </p>


                    <div class="dropdown-divider"></div>

                    <a class="dropdown-item" href="@Url.Action("Index", "Books")">
                        <i class="fa fa-book"></i> Kitap İşlemleri
                    </a>
                    <div class="dropdown-divider"></div>

                    <a class="dropdown-item" href="@Url.Action("Index", "Categories")">
                        <i class="fa fa-cube"></i> Kategori İşlemleri
                    </a>
                    <div class="dropdown-divider"></div>

                    <a class="dropdown-item" href="@Url.Action("Index", "Sliders")">
                        <i class="fa fa-image"></i> Slider İşlemleri
                    </a>
                    <div class="dropdown-divider"></div>
                }
                else
                {
                    <p style="background-color:pink" class="dropdown-item">
                        <i class="fa fa-user"></i> Standart Üye
                    </p>


                    <div class="dropdown-divider"></div>

                }


                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Manage")">
                    <i class="fa fa-cog"></i> Şifre Değiştir
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="fa fa-power-off"></i> Çıkış
                </a>

            </div>
        </li>

    }
}
else
{

    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#">
                    <i class="fa fa-home"></i> Anasayfa
                    <span class="sr-only">(current)</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in-alt"></i> Giriş Yap</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Register", "Account")"><i class="fa fa-user"></i> Üye Ol</a>
            </li>
        </ul>
    </div>

}
